#PBS -l mem=32gb

#PBS -M renjieshang@uga.edu
#PBS -m ae

cd $PBS_O_WORKDIR

module load SAMtools/1.6-foss-2016b

samtools index SRR8599814.Aligned.sortedByCoord.out.bam

